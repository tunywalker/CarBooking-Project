@model List<ResultFeatureDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araba Özellikler, Listesi</h4>
						<p class="card-subtitle mb-4">
							Arabalarla ilgili yeni özellik ekleme (Klima, Bluetooth, Elektrik vs.) özellikler listesi, özellikler üzerinde düzenleme ve bir özelliğüi kaldırma işlemini buradan gerçekleştirebilirsiniz.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Özellik</th>																
										<th>İşlemler</th>

									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th scope="row">@count</th>
											<td>@item.Name</td>											
											<td>
												<a href="/AdminFeature/RemoveFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a>
												<a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a>
							

											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/AdminFeature/CreateFeature/" class="btn btn-outline-primary">Yeni özellik girişi</a>
						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>




		</div>


	</div>

</div>


	</div>
</div>

