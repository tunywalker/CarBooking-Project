@model List<ResultLocationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Lokasyon Bilgileri ALanı</h4>
						<p class="card-subtitle mb-4">
							Anasayfa ve Araç kiralama sayfasında yer alan araçların alınış ve bırakılış noktalarını temsil eden yer lokasyon kısmıdır. Aşağıda araç kiralama noktalarına ait lokasyon bilgilerinin isimleri yer almaktadır. Sağ tarafta yer alan buton üzerinden bu lokasyonun harita bilgisine erişim sağlayabilirsiniz.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Lokasyon</th>										
										<th>İşlemler</th>



									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Name</td>											
											

											<td>
												<div class="btn-group">
													<a href="/Admin/AdminLocation/RemoveLocation/@item.LocationId" class="btn btn-outline-danger mx-1">Sil</a>
													<a href="/Admin/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-outline-success mx-1">Güncelle</a>
													<a href="/Admin/AdminLocation/Location Detail/@item.LocationId" class="btn btn-outline-primary mx-1">Konumu Aç</a>



												</div>




											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary">Yeni Lokasyon Girişi</a>
						</div>

					</div>

				</div>


			</div>




		</div>


	</div>

</div>




