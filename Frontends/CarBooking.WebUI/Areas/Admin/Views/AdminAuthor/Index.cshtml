@model List<ResultAuthorDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yazar Listesi</h4>
						<p class="card-subtitle mb-4">
							Yazarlarla ilgili işlemlerin gerçekleştireleceği sayfadır. Yazar girişi yaparken bilgileri eksiksiz girmeye özen gösterelim.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Ad Soyad</th>										
										<th>İşlemler</th>



									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td><img src="@item.imageUrl" width="50" height="50" style="margin-right:10px">@item.name</td>
										
											
											<td>
												<div class="btn-group">
													<a href="/Admin/AdminAuthor/RemoveAuthor/@item.authorId" class="btn btn-outline-danger mx-1">Sil</a>

													<a href="/Admin/AdminAuthor/UpdateAuthor/@item.authorId" class="btn btn-outline-success mx-1">Güncelle</a>
													<a href="/Admin/AdminAuthor/UpdateAuthor/@item.authorId" class="btn btn-outline-dark mx-1">Yazarın Blogları</a>
												


												</div>




											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-primary">Yeni Yazar Girişi</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
	</div>

