@model UpdatePricingDto
@{
	ViewData["Title"] = "Pricing Oluştur";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Ödeme Periyodu Girişi</h4>
						<p class="card-subtitle mb-4">Ödeme periyodu alanındaki veri güncellemesini aşağıdaki panelden yapabilirsiniz. </p>

						<form method="post">

							<div class="form-group">
								<input type="hidden" asp-for="PricingId" />
								<label for="exampleInputModel">Ödeme Periyot Başlığı </label>
								<input type="text" class="form-control" asp-for="Name" placeholder="Ödeme periyot adını giriniz.">

							</div>


							<button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Periyodunu Güncelle</button>
						</form>

					</div>
				</div>

			</div>

		</div>


	</div>

</div>

