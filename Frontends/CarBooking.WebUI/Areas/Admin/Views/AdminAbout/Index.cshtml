@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">About Listesi</h4>
						<p class="card-subtitle mb-4">
							Anasayfanın ve Hakkımızda sayfasının 'Hakkımızda' alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğü bozulmaması adına lütfen sadece 1 (bir) tane veri girişi yapınız. Aksi durumlarda tema bütünlüğü bozulabilir.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>Başlık</th>
										<th>Açıklama</th>
										<th>Görsel</th>										
										<th>İşlemler</th>



									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@item.title</td>
											<td>@item.description</td>
											<td>@item.imageUrl</td>
											
											<td>
												<div class="btn-group">
													<a href="/Admin/AdminAbout/RemoveAbout/@item.aboutID" class="btn btn-outline-danger mx-1">Sil</a>
													<a href="/Admin/AdminAbout/UpdateAbout/@item.aboutID" class="btn btn-outline-success mx-1">Güncelle</a>
													


												</div>




											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Alanı Girişi</a>
						</div>

					</div>

				</div>


			</div>




		</div>


	</div>

</div>




