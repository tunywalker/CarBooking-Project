@model List<ResultCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yazar Listesi</h4>
						<p class="card-subtitle mb-4">
							Kategori adlarıyla ilgili işlemlerin gerçekleştireleceği sayfadır. Kategori girişi yaparken bilgileri eksiksiz girmeye özen gösterelim.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Kategori Adı</th>
										<th>İşlemler</th>



									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Name</td>


											<td>
												<div class="btn-group">
													<a href="/Admin/AdminCategory/RemoveCategory/@item.CategoryId" class="btn btn-outline-danger mx-1">Sil</a>

													<a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-outline-success mx-1">Güncelle</a>
													<a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-outline-dark mx-1">Kategoriye ait Bloglar</a>



												</div>




											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

