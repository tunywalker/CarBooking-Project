@model List<ResultServiceDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Hizmet Bilgileri Alanı</h4>
						<p class="card-subtitle mb-4">
							Anasayfa ve Hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki sayfadan gerçekleştirebilirsiniz. Tema bütünlüğünü korumak adına en fazla 4 adet hizmet girişi yapınız.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Başlık</th>
										<th>Açıklama</th>
										<th>Icon-Url</th>
										<th>İşlemler</th>




									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.IconUrl</td>


											<td>
												<div class="btn-group">
													<a href="/Admin/AdminService/RemoveService/@item.ServiceId" class="btn btn-outline-danger mx-1">Sil</a>
													<a href="/Admin/AdminService/UpdateService/@item.ServiceId" class="btn btn-outline-success mx-1">Güncelle</a>




												</div>




											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/Admin/AdminService/CreateService/" class="btn btn-outline-primary">Yeni Servis Girişi</a>
						</div>

					</div>

				</div>


			</div>




		</div>


	</div>

</div>




