@model List<ResultTestimonialDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Anasayfa Referanslar Listesi</h4>
						<p class="card-subtitle mb-4">
							Müşterilerimizin bizim hakkımızda söylemiş oldukları ifadeleri yorum olarak ekleyip, düzenleyebildiğimiz sayfamız aşağıda yer almaktaktadır.
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Adı Soyadı</th>
										<th>Başlık</th>
										<th>Yorum</th>
										<th>İşlemler</th>




									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td><img src="@item.imageUrl" height="50" width="50" /></td>
											<td>@item.Name</td>
											<td>@item.Title</td>
											<td>@item.Comment</td>



											<td>
												<div class="btn-group">
													<a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.testimonialId" class="btn btn-outline-danger mx-1">Sil</a>
													<a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.testimonialId" class="btn btn-outline-success mx-1">Güncelle</a>




												</div>




											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Girişi</a>
						</div>

					</div>

				</div>


			</div>




		</div>


	</div>

</div>




