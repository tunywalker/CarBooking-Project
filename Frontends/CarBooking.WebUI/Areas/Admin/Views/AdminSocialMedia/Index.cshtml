@model List<ResultSocialMediaDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">

		<!-- page content -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Sosyal Medya Hesap Linkleri Yönetimi</h4>
						<p class="card-subtitle mb-4">
							Kullandığınız sosyal medya hesap bilgilerini düzenleyebileceğiniz bir sayfadır.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Adı</th>
										<th>Icon-Url</th>
										<th>Url</th>
										<th>İşlemler</th>




									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Name</td>
											<td>@item.Icon</td>
											<td>@item.Url</td>
											


											<td>
												<div class="btn-group">
													<a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger mx-1">Sil</a>
													<a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success mx-1">Güncelle</a>




												</div>




											</td>

										</tr>
									}


								</tbody>
							</table>
							<a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Yeni Sosyal Medya Girişi</a>
						</div>

					</div>

				</div>


			</div>




		</div>


	</div>

</div>




